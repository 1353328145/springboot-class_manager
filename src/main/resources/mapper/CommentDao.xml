<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jexing.classmanager.dao.CommentDao">

    <resultMap type="com.jexing.classmanager.entity.Comment" id="CommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="fromId" column="from_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CommentMap">
        select id,
               from_id,
               content,
               create_time
        from class_manager.comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CommentMap">
        select id,
               from_id,
               content,
               create_time
        from class_manager.comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CommentMap">
        select
        id, from_id, content, create_time
        from class_manager.comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="fromId != null">
                and from_id = #{fromId}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into class_manager.comment(from_id, content, create_time)
        values ( #{fromId}, #{content}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update class_manager.comment
        <set>
            <if test="fromId != null">
                from_id = #{fromId},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from class_manager.comment
        where id = #{id}
    </delete>

</mapper>